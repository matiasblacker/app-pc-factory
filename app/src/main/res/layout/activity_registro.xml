<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/verde"
        android:textSize="24sp"
        android:text="Registrarse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <Button
        android:id="@+id/button4"
        android:onClick="volveralhome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/cerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="632dp"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="25dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:paddingHorizontal="35dp">


        <EditText
            android:id="@+id/editTextPhone3"
            android:background="@drawable/camporegistro"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/tel"
            android:hint="Teléfono"
            android:textAlignment="center"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextTextEmailAddress3"
            android:background="@drawable/camporegistro"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:drawableLeft="@drawable/correo"
            android:hint="Correo electrónico"
            android:textAlignment="center"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword4"
            android:background="@drawable/camporegistro"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingHorizontal="5dp"
            android:drawableLeft="@drawable/candado"
            android:drawableRight="@drawable/novisible"
            android:hint="Contraseña"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Repite tu contraseña"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/verde"/>

        <EditText
            android:id="@+id/editTextTextPassword5"
            android:background="@drawable/camporegistro"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingHorizontal="5dp"
            android:drawableLeft="@drawable/candado"
            android:drawableRight="@drawable/novisible"
            android:hint="Contraseña"
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textColor="@color/verde"
            android:textSize="24sp"
            android:background="@drawable/btn_radius_lima"/>

        <Button
            android:id="@+id/button10"
            android:background="@drawable/btn_radius_blancobordenegro"
            android:drawableLeft="@drawable/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingHorizontal="20dp"
            android:text="Inscribirse con google"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/verde"/>

        <Button
            android:id="@+id/button11"
            android:background="@drawable/btn_radius_ayuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Necesitas ayuda?"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>